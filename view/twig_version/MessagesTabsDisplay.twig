{% if conversationList|length == 0 %}
<div class="noMessage">
	No messages to display.
</div>
{% else %}
<div class="conversation-list">
	<div class="list-group">
	{% for conversation in conversationList %}
		<div class="conversation">
			<div class="list-group-item active" style="padding: 0; margin: 0;">
				<div class="btn-group-sm centerAll">
					<img src="{{conversation.userImage}}" class="user-image"/>
					<div class="conv-user">
						<div class="user-name">
							{{conversation.userName}}
						</div>
						<div>
							{% if giving == 1 %}requesting {% else %}offering {% endif %}<span class="item">{{conversation.item}}</span>
						</div>
					</div>
					<button type="button" id="deleteBtn" value = "{{conversation.conversationID}}" class="btn-nav">
						<i class="material-icons">delete</i>
					</button>
					<a type="button" id="chatBtn" class="btn-nav" href="../../public/public/MessageRouter.php?type=view&conversationID={{conversation.conversationID}}" >
						{% if conversation.notifications == 0 %}<i class="material-icons">arrow_forward</i>{% else %}<span class="badge">{{conversation.notifications}}</span>{% endif %}
					</a>
				</div>
			</div>
		</div>
	{% endfor %}
	</div>
</div>
{% endif %}