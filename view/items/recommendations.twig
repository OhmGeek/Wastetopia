{% extends 'header.twig' %}

{% block title %}
recommendations
{% endblock %}

{% block navbar %}
{% include 'navbar.twig' %}
{% endblock %}

{% block content %}
<div class="header title">
  ITEMS YOU MIGHT LIKE
</div>
<div class="container-fluid">
  <div class="grid">
    <!-- need this for mosonry layout to work properly with bootstrap grid system -->
    <div class="grid-sizer col-xs-12 col-sm-6 col-md-3"></div>
    {% for item in recommendationList %}
    <div class="grid-item col-xs-12 col-sm-6 col-md-3">
      <div class="thumbnail zero-padding" id="{{listing.ID}}">
        <div class="caption">
          <div class="centerAll">
            <img src="{{item.userImg}}" class="user-image"/>
            <div class="user-details">
              <a class="user-name" href="#{{item.userID}}">
                {{item.userName}}
              </a>
              <div class="added-date">
                {{item.addedDate}}
              </div>
            </div>
            <div class="road-distance">
              <i class="material-icons">place</i> {{item.postCode}}
            </div>
          </div>
        </div>
        <img src="{{item.imgURL}}" style="border-color: lightgrey;" />
        <div class="caption">
          <h3>{{item.itemName}}</h3>
          <div class="trans-info">
            <div><span>Quantity: </span> {{ item.quantity }}</div>
          </div>
          <div class="nav-btns">
            <a href="#" class="btn btn-primary" role="button" id="{{item.ID}}">View</a>
            <a href="#" class="btn btn-default" role="button">Request</a>
            <a href="#" role="button" class="btn-watch watched" id="watch"><i class="material-icons">visibility</i></a>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}

{%  set jslist = ["plugins/isotope/isotope.pkgd.min.js","recommendations.js"] %}
