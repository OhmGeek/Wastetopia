{% extends 'header.twig' %}

{% block title %}
   {{ name }} | Wastetopia
{% endblock %}

{% block navbar %}
    {% include 'navbar.twig' %}
{% endblock %}

{% block content %}
    <div class="grid-body" style="padding-top: 60px;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 col-md-6 zero-padding">
                    {% if images %}
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">

                            {% set counter = -1 %}
                            {% for img in images %}
                                {% set counter = counter + 1 %}
                                <li data-target="#myCarousel" data-slide-to="{{ counter }}" {% if counter == 0 %}
                                    class="active" {% endif %}></li>
                            {% endfor %}
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">

                            <!-- TODO: alt tags here for accessibility -->
                            <!-- Make the first item be active, but all others not be -->
                            {% set first_item = 'active' %}
                            {% for img in images %}
                                <div class="item {{ first_item }}">
                                    <img src="{{ img.url }}">
                                </div>
                                {% set first_item = '' %}
                            {% endfor %}
                        </div>
                    {% else %}
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                                <div class="item active">
                                    <img src="//s3.eu-west-2.amazonaws.com/wastetopia-static-store-001/placeholder-item.png" alt="No image specified">
                                </div>
                        </div>

                    {% endif %}

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 zero-padding">
                    <div class="item-details">
                        <div class="item-name">
                            {{ name }}
                        </div>
                        <div class="item-subTitle">
                            {{ description }}
                        </div>
                        <div class="item-description">
                            <div class="container-fluid">
                                <div class="row">

                                        <!-- go through each of the category ids, getting the name, and then the type
                                        for the item !-->
                                        {% if type %}
                                        <div class="col-xs-12 col-sm-6 zero-padding">
                                            <span class="info">Type:</span>
                                            {% for tag in classification %}
                                                {{ tag.name }}
                                            {% endfor %}
                                        </div>
                                        {% endif %}

                                    {% if dietary %}
                                        <div class="col-xs-12 col-sm-6 zero-padding">
                                            <span class="info">Suitable for:</span>
                                            {% for tag in dietary %}
                                                {{ tag.name }}
                                            {% endfor %}
                                        </div>
                                    {% endif %}

                                    {% if state %}
                                    <div class="col-xs-12 col-sm-6 zero-padding">
                                        <span class="info">State:</span>
                                        {% for tag in state %}
                                            {{ tag.name }}
                                        {% endfor %}
                                    </div>
                                    {% endif %}

                                    <div class="col-xs-12 col-sm-6 zero-padding">
                                        <span class="info">Expiry Date:</span>
                                            {{ expires }}
                                    </div>

                                    <div class="col-xs-12 col-sm-6 zero-padding">
                                        <span class="info">Location:</span>
                                        TODO GET FROM API
                                    </div>

                                    {% if contains %}
                                    <div class="col-xs-12 col-sm-6 zero-padding">
                                        <span class="info">May Contains:</span>
                                        {% for tag in contains %}
                                            {{ tag.name }}
                                        {% endfor %}
                                    </div>
                                    {% endif %}


                                </div>
                            </div>
                        </div>
                        <div class="item-nav-btn">
                            <button type="button" class="item-btn">
                                <span class="glyphicon glyphicon-send" aria-hidden="true"></span>
                                <p class="btn-text" >Request</p>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12 zero-padding">
                    <div id="map"></div>

                    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCrh2cKWRAFifeLIkznE2Iw4Oblqlmyyt0&callback=initMap">
                    </script>
                </div>
                    <div id="barcode-details-ajax" class="col-sm-12 col-md-12 zero-padding" data-barcode="{{ barcode }}">

                    </div>
            </div>
        </div>
    </div>
{% endblock %}
{% set jslist = ["map.js", "view-item.js"] %}