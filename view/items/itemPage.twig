{% extends 'header.twig' %}

{% block title %}
    Your page title goes here! Please only put plain text here
{% endblock %}

{% block navbar %}
    {% include 'navbar.twig' %}
{% endblock %}

{% block content %}
    <div class="grid-body" style="padding-top: 60px;">
  <div class="container-fluid">
   <div class="row">
     <div class="col-sm-12 col-md-6 zero-padding">
       <div id="myCarousel" class="carousel slide" data-ride="carousel">
         <!-- Indicators -->
         <ol class="carousel-indicators">
           <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
           <li data-target="#myCarousel" data-slide-to="1"></li>
           <li data-target="#myCarousel" data-slide-to="2"></li>
           <li data-target="#myCarousel" data-slide-to="3"></li>
         </ol>
         <!-- Wrapper for slides -->
         <div class="carousel-inner" role="listbox">
		 
		 {% for element in carousel %}
			<div class="{{element.class}}">
            <img src="{{element.image}}" alt="{{element.alt}}">
          </div>
		 {% endfor %}
      
	  </div>
      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
       <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
       <span class="sr-only">Previous</span>
     </a>
     <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
       <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
       <span class="sr-only">Next</span>
     </a>
   </div>
 </div>
 <div class="col-sm-12 col-md-6 zero-padding">
   <div class="item-details">
    <div class="item-name">
      {{itemName}}
    </div>
    <div class="item-subTitle">
	  {{itemSubTitle}}
    </div>
    <div class="item-description">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12 col-sm-6 zero-padding">
            <span class="info">Type: </span>{{itemType}}
          </div>
          <div class="col-xs-12 col-sm-6 zero-padding">
            <span class="info">State: </span>{{itemState}}
          </div>
          <div class="col-xs-12 col-sm-6 zero-padding">
            <span class="info">Quantity: </span>{{itemQuantity}}
          </div>
          <div class="col-xs-12 col-sm-6 zero-padding">
            <span class="info">Expiry date: </span>{{itemExpiry}}
          </div>
          <div class="col-xs-12 col-sm-6 zero-padding">
            <span class="info">Pick up location: </span>{{itemLocation}}
          </div>
          <div class="col-xs-12 col-sm-6 zero-padding">
            <span class="info">May contains: </span>{{itemIngredients}}
          </div>
          <div class="col-sm-12 zero-padding">
            <span class="info">Description:</span>
            <br>
				{{itemDescription}}
			</div>
        </div>
      </div>
    </div>
    <div class="item-nav-btn">
      <button type="button" class="item-btn">
        <span class="glyphicon glyphicon-send" aria-hidden="true"></span>
        <p class="btn-text" >Request</p>
      </button>
    </div>
  </div>
</div>
<div class="col-sm-12 col-md-12 zero-padding">
 <div id="map"></div>
 <script src="map.js"></script>

 <script async defer
 src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCrh2cKWRAFifeLIkznE2Iw4Oblqlmyyt0&callback=initMap">
</script>
</div>
<div class="col-sm-12 col-md-12 zero-padding">
  <div class="item-FAQ">
    FAQ
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12 col-sm-6 zero-padding">
          {% for element in faqs %}
			<ul>
				<li style="margin: 0 0 10px 0;">
              
					<div class="faq-user-img">
					<img src="{{element.firstImage}}" class="faq-q"/>
					</div>  
					<div class="tri">{{element.info}}</div>
					<div class="question">{{element.question}}</div>
				</li>
				<li>
					<div class="user-sign">
						<img src="{{element.secondImage}}" class="user-image faq-a"/>
						<span class="answer">{{element.answer}}</span>
					</div> 
				</li>
          </ul>
		 {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>
{% endblock %}

