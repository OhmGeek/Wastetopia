    {% for message in messages %}
        <div class="{% if message.sender == 1 %}sender{% else %}receiver{% endif %}">
            <div class="content">
                {{message.content}}
            </div>
            <div class="time-stamp" align="{% if message.sender == 1 %}right{% else %}left{% endif %}">
                {{message.timeStamp}}
            </div>
        </div>
    {% endfor %}

