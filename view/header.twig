<!DOCTYPE html>
<html>
	<head>
        <meta charset="utf-8">
        <title>{% block title %}{% endblock %}</title>
        <base href="{{config.ROOT_BASE}}" id="baseURL">
        <!-- Material Design fonts -->
        <link href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css" rel="stylesheet">
        <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!-- Bootstrap CSS-->
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
        <!-- jQuery Javascript library -->
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <!-- Bootstrap JavaScript -->
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <!-- Bootstrap Material Design -->
        <link href="{{config.ROOT_CSS}}/bootstrap-material-css/bootstrap-material-design.min.css" rel="stylesheet">
        <link href="{{config.ROOT_CSS}}/bootstrap-material-css/ripples.min.css" rel="stylesheet">
        <!-- Wastopia Custom CSS -->
        <link rel="stylesheet" href="{{config.ROOT_CSS}}/wastetopia-main.css"/>
        {% for cssfile in csslist %}
            <link rel="stylesheet" href="{{config.ROOT_CSS}}/{{cssfile}}"></link>
        {% endfor %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>
	<body>
        {% block navbar %}
	    {% endblock %}
	    {% block content %}
	    {% endblock %}
        <script src="{{config.ROOT_JS}}/bootstrap-material-js/ripples.min.js"></script>
        <script src="{{config.ROOT_JS}}/bootstrap-material-js/material.min.js"></script>
        <script>
          $(function () {
            $.material.init();
          });
        </script>
        <!-- Wastopia Custom JS-->
        {% for jsfile in jslist %}
            <script src="{{config.ROOT_JS}}/{{jsfile}}"></script>
        {% endfor %}
	</body>
</html>
