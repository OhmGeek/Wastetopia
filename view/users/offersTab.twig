<div id="offers" class="tab-pane fade">
    <div class="header">
        <div class="title">
            <a role="button" data-toggle="tab" href="#home"><i class="material-icons">chevron_left</i></a>REQUESTS RECEIVED
        </div>
        <ul class="nav nav-pills request-options">
            <li class="active"><a href="#pending-transaction" data-toggle="tab" role="button">Pending - {{ offers.pending|length }}</a></li>
            <li><a href="#completed-transaction" data-toggle="tab" role="button">Completed - {{ offers.completed|length }}</a></li>
        </ul>
    </div>
    <div class="tab-content zero-padding" style="padding-top:10px; background-color:transparent;">
        <div id="completed-transaction" class="tab-pane fade">
            <div class="container-fluid">
                <div class="grid">
                    {% for item in offers.completed %}
                        <div class="grid-item col-xs-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="grid-item-content">
                                <div class="thumbnail zero-padding" id="{{ item.transactionID }}">
                                    <div class="request-status complete">
                                        COMPLETED ON {{ item.completedDate }}
                                    </div>
                                    <img src="{{ item.imgURL }}" style="border-color: lightgrey;"/>
                                    <div class="caption">
                                        <h3>{{ item.itemName }}</h3>
                                        <div class="trans-info">
                                            <div class="request-by">
                                                <span>Requested by:</span>
                                                <div class="user">
                                                    <img class="user-image" src="{{ item.userImg }}"/>
                                                    <a class="user-name" href="#{{ item.userID }}" id="{{item.userID}}">
                                                        {{ item.userName }}
                                                    </a>
                                                </div>
                                            </div>
                                            <div><span>Quantity:</span><span class="quantity">{{ item.quantity }}</span></div>
                                        </div>
                                        <div class="nav-btns">
                                            <a href="{{config.ROOT_BASE}}/items/view/{{item.listingID}}" class="btn btn-primary" role="button" id="{{ item.listingID }}">View</a>
                                            <a href="#delete" role="button" class="btn-watch"><i
                                                        class="material-icons">delete</i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div id="pending-transaction" class="tab-pane fade in active">
            <div class="container-fluid">
                <div class="grid">
                    {% for item in offers.pending %}
                        <div class="grid-item col-xs-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="grid-item-content">
                                <div class="thumbnail zero-padding" id="{{ item.transactionID }}">
                                    <div class="request-status pending">
                                        PENDING SINCE {{ item.startedDate }}
                                    </div>
                                    <img src="{{ item.imgURL }}" style="border-color: lightgrey;"/>
                                    <div class="caption">
                                        <h3>{{ item.itemName }}</h3>
                                        <div class="trans-info">
                                            <div class="request-by">
                                                <span>Requested by: </span>
                                                <div class="user">
                                                    <img class="user-image" src="{{ item.userImg }}"/>
                                                    <a class="user-name" href="#{{item.userID}}" id="{{item.userID}}">
                                                        {{item.userName}}
                                                      </a>
                                                </div>
                                            </div>
                                            <div><span>Quantity: </span><span class="quantity">{{ item.quantity }}</span></div>
                                        </div>
                                        <div class="nav-btns">
                                            <a href="{{config.ROOT_BASE}}/items/view/{{item.listingID}}" class="btn btn-primary" role="button" id="{{ item.listingID }}">View</a>
                                            <a href="{{config.ROOT_BASE}}/messages/conversation/{{item.listingID}}" class="btn btn-default" role="button"
                                               id="{{ item.listingID }}">Message</a>
                                            <div class="dropup btn-watch">
                                                <a href="bootstrap-elements.html" data-target="#"
                                                   class="dropdown-toggle" data-toggle="dropdown">
                                                    <i class="material-icons">more_vert</i>
                                                </a>
                                                <ul class="dropdown-menu dropdown-menu-right">
                                                    <li><a href="#complete" id = "{{item.transactionID}}">Mark as Complete</a></li>
                                                    <li><a href="#reject" id = "{{item.transactionID}}">Reject Offer</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
