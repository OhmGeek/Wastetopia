{% extends 'header.twig' %}

{% block title %}
    Search
{% endblock %}

{% block navbar %}
    {% include 'navbar.twig' %}
{% endblock %}

{% block content %}
<!-- Create the search results window -->
<div id="main-content">
    <div id="sidebar">
      <ul id="filter-list" role="tablist" aria-multiselectable="true">
        {% for itemFilter in filters %}
        <li role="tab">
          <div class="filter-category" id="type-category">
            {{itemFilter.optionsCategory}}
            <a role="button" data-toggle="collapse" data-parent="#filter-list" href="#type-options" aria-expanded="true" aria-controls="type-options"><i class="material-icons"></i></a>
          </div>
          <ul class="filter-options collapse in" id="type-options" role="tabpanel" aria-labelledby="type-category">
            {% for option in itemFilter.options %}
            <li>
              <div class="form-group zero-padding">
                <div class="checkbox">
                  <label>
                    <input type="checkbox"> {{option}}
                  </label>
                </div>
              </div>
            </li>
            {% end for %}
          </ul>
        </li>
        {% end for %}
      </ul>
    </div>
    <div id="main">
      <button id="filter-btn">Click me</button>
      <div class="container-fluid">
        <div class="grid">
          <!-- need this for mosonry layout to work properly with bootstrap grid system -->
          <div class="grid-sizer col-xs-12 col-sm-6 col-md-4"></div>
          {% for item in itemList %}
          <div class="grid-item col-xs-12 col-sm-6 col-md-4">
            <div class="thumbnail zero-padding" id="{{listing.ID}}">
              <div class="caption">
                <div class="centerAll">
                  <img src="{{item.userImg}}" class="user-image"/>
                  <div class="user-details">
                    <a class="user-name" href="#{{item.userID}}">
                      {{item.userName}}
                    </a>
                    <div class="added-date">
                      {{item.addedDate}}
                    </div>
                  </div>
                  <div class="road-distance">
                    <i class="material-icons">place</i> {{item.distance}}m
                  </div>
                </div>
              </div>
              <img src="{{item.imgURL}}" style="border-color: lightgrey;" />
              <div class="caption">
                <h3>{{item.itemName}}</h3>
                <div class="nav-btns">
                  <a href="#" class="btn btn-primary" role="button" id="{{item.ID}}">View</a>
                  <a href="#" class="btn btn-default" role="button">Request</a>
                  <a href="#" role="button" class="btn-watch" id="watch"><i class="material-icons">visibility</i></a>
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
</div>
{% endblock %}

